<div class="banner" style=" background-image: linear-gradient(45deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)), url( <%= image_path 'banner.png' %>);">
  <h1>Disney Cocktails</h1>
</div>
<div id="content">
  <% @cocktails.each do |cocktail| %>
    <div class="main-page-card">
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card-image">
      <%= cl_image_tag cocktail.photo, :crop=>"lpad" %>
      </div>
      <h1><%= cocktail.name %></h1>
    <% end %>
    </div>
  <% end %>
</div>
